{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generated schema for Root",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "datasets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "institution": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "history": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "coordinates": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "short_name": {
                  "type": "string"
                },
                "long_name": {
                  "type": "string"
                },
                "standard_name": {
                  "type": "string"
                },
                "units": {
                  "type": "string"
                }
              },
              "required": ["short_name", "long_name", "standard_name", "units"]
            }
          },
          "variables": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "short_name": {
                  "type": "string",
                  "pattern": "^[a-zA-Z_]+[a-zA-Z0-9_]*$"
                },
                "long_name": {
                  "type": "string"
                },
                "standard_name": {
                  "type": "string",
                  "pattern": "^[a-zA-Z_]+[a-zA-Z0-9_]*$",
                  "description": "The standard name of the variable"
                },
                "type_of_level": {
                  "type": "string"
                },
                "level": {
                  "type": "number"
                },
                "coordinates": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "description": {
                  "type": "string"
                },
                "units": {
                  "type": "string"
                }
              },
              "required": [
                "short_name",
                "long_name",
                "standard_name",
                "type_of_level",
                "level",
                "coordinates",
                "description",
                "units"
              ]
            }
          },
          "crs": {
            "type": "object",
            "properties": {
              "geographic_crs_name": {
                "type": "string"
              },
              "projected_crs_name": {
                "type": "string"
              },
              "grid_mapping_name": {
                "type": "string"
              },
              "semi_major_axis": {
                "type": "number"
              },
              "semi_minor_axis": {
                "type": "number"
              },
              "inverse_flattening": {
                "type": "number"
              },
              "reference_ellipsoid_name": {
                "type": "string"
              },
              "longitude_of_prime_meridian": {
                "type": "number"
              },
              "prime_meridian_name": {
                "type": "string"
              },
              "horizontal_datum_name": {
                "type": "string"
              },
              "latitude_of_projection_origin": {
                "type": "number"
              },
              "longitude_of_projection_origin": {
                "type": "number"
              },
              "standard_parallel": {
                "type": "number"
              },
              "false_easting": {
                "type": "number"
              },
              "false_northing": {
                "type": "number"
              },
              "units": {
                "type": "string"
              }
            },
            "required": [
              "geographic_crs_name",
              "projected_crs_name",
              "grid_mapping_name",
              "semi_major_axis",
              "semi_minor_axis",
              "inverse_flattening",
              "reference_ellipsoid_name",
              "longitude_of_prime_meridian",
              "prime_meridian_name",
              "horizontal_datum_name",
              "latitude_of_projection_origin",
              "longitude_of_projection_origin",
              "standard_parallel",
              "false_easting",
              "false_northing",
              "units"
            ]
          }
        },
        "required": [
          "title",
          "institution",
          "source",
          "history",
          "comment",
          "coordinates",
          "variables",
          "crs"
        ]
      }
    }
  },
  "required": ["title", "description", "datasets"]
}
